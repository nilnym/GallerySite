@model ImageEditVM
@{ 
    ViewBag.Title = "Update item";
}

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row">
    <img class="max-card" src="/images/@Model.ImageUrl" />
</div>

<div class="row">
    <form asp-controller="image" asp-action="edit">
        <input type="hidden" asp-for="ImageId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GalleryId"></label>
            <select class="form-control" asp-for="GalleryId" asp-items="Model.Galleries">
                <option value="">Select a gallery</option>
            </select>
            <span asp-validation-for="GalleryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tags"></label>
            <input class="form-control" asp-for="Tags" />
            <span asp-validation-for="Tags"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Save" />
    </form>
</div>

@section scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}